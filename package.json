{
  "name": "remix-hacker-news",
  "private": true,
  "description": "hacker news made with remix.run",
  "repository": "https://github.com/mcansh/remix-hacker-news",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "sideEffects": false,
  "main": "server/index.js",
  "scripts": {
    "build:css": "tailwindcss --output ./app/styles/tailwind.css --minify",
    "build:remix": "remix build",
    "build": "npm run build:css && npm run build:remix",
    "dev": "pm2-dev pm2.config.js",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@mcansh/fetcher": "0.2.2",
    "@remix-run/react": "0.19.3",
    "@remix-run/vercel": "0.19.3",
    "@vercel/node": "1.12.1",
    "clsx": "1.1.1",
    "date-fns": "2.25.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.0.0-beta.6",
    "remix": "0.19.3",
    "sanitize-html": "2.5.2"
  },
  "devDependencies": {
    "@remix-run/dev": "0.19.3",
    "@remix-run/serve": "0.19.3",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@types/sanitize-html": "2.5.0",
    "pm2": "5.1.2",
    "tailwindcss": "3.0.0-alpha.1",
    "typescript": "4.4.4",
    "vercel": "23.1.2"
  },
  "engines": {
    "node": ">=14"
  }
}
