{
  "name": "remix-hacker-news",
  "private": true,
  "description": "React Router Hacker News clone",
  "targets": {
    "server": {
      "source": "app/server.ts",
      "context": "react-server",
      "scopeHoist": false,
      "includeNodeModules": {
        "express": false
      }
    }
  },
  "scripts": {
    "dev": "parcel",
    "build": "parcel build",
    "lint": "eslint --no-error-on-unmatched-pattern --cache --cache-location ./node_modules/.cache/eslint --fix .",
    "format": "prettier --ignore-path .prettierignore --ignore-path .gitignore --ignore-unknown --write .",
    "typecheck": "react-router typegen && tsc -b",
    "start": "node ./dist/server/server.js"
  },
  "dependencies": {
    "@epic-web/cachified": "^5.5.2",
    "@parcel/runtime-rsc": "^2.15.2",
    "@ryanflorence/async-provider": "^0.0.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "fetch-extras": "^1.0.0",
    "isbot": "^5.1.28",
    "lru-cache": "^11.1.0",
    "pretty-cache-header": "^1.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "0.0.0-experimental-e87ed2fd4",
    "react-server-dom-parcel": "^19.1.0",
    "remix-utils": "^8.7.0",
    "time-ago": "^0.2.1",
    "zod": "3.25.42"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@react-router/dev": "0.0.0-experimental-e87ed2fd4",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript/native-preview": "7.0.0-dev.20250531.1",
    "eslint": "^9.28.0",
    "parcel": "^2.15.2",
    "parcel-config-react-router-experimental": "^1.0.16",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3"
