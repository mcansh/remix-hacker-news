{
  "name": "remix-hacker-news",
  "private": true,
  "description": "hacker news made with remix.run",
  "repository": "https://github.com/mcansh/remix-hacker-news",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "sideEffects": false,
  "main": "server/index.js",
  "scripts": {
    "postinstall": "npm run setup:worker",
    "setup:worker": "remix setup cloudflare-workers",
    "setup:node": "remix setup node",
    "prebuild": "npm run setup:worker",
    "build:css": "tailwindcss --output ./app/styles/tailwind.css --minify",
    "build:remix": "remix build",
    "build": "npm run build:css && npm run build:remix && npm run build:worker",
    "build:worker": "esbuild --minify --bundle --sourcemap --format=esm --outfile=dist/worker.mjs ./worker",
    "predev": "npm run setup:node",
    "dev": "pm2-dev pm2.config.js"
  },
  "dependencies": {
    "@mcansh/fetcher": "0.2.2",
    "@remix-run/cloudflare-workers": "0.20.1",
    "@remix-run/react": "0.20.1",
    "clsx": "1.1.1",
    "date-fns": "2.25.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.0.0-beta.8",
    "remix": "0.20.1",
    "sanitize-html": "2.5.2",
    "time-ago": "0.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.1.1",
    "@remix-run/dev": "0.20.1",
    "@remix-run/node": "0.20.1",
    "@remix-run/serve": "0.20.1",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@types/sanitize-html": "2.5.0",
    "esbuild": "0.13.12",
    "pm2": "5.1.2",
    "tailwindcss": "3.0.0-alpha.1",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=14"
  }
}
